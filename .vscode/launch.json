{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flask server",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        // NOTE: Default options are parsed from `.flaskenv` file
        // "FLASK_APP": "src/server.py:app",
        // "FLASK_ENV": "development",
        // "FLASK_DEBUG": "0",
      },
      "args": [
        "run",
        //  "--no-debugger",
      ],
      "jinja": true
    },
    {
      "name": "All python tests",
      "type": "python",
      "request": "launch",
      "module": "unittest",
      "args": [
        "discover -f ./ -s ./src -p *_test.py",
      ],
    },
    {
      "name": "Specific python test (in args)",
      "type": "python",
      "request": "launch",
      "module": "unittest",
      "args": [
        "-f",
        "src/core/recordsStorage_test.py",
        // "-k",
        // "specific_tests",
      ],
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Module",
      "type": "python",
      "request": "launch",
      "module": "enter-your-module-name"
    },
  ]
}
